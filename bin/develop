#!/usr/bin/env php
<?php

use Symfony\Component\Console as Console;

$dir = __DIR__;
while ($dir != '/' && !file_exists("$dir/vendor/autoload.php")) {
    echo $dir;
    $dir = dirname($dir);
}
require_once "$dir/vendor/autoload.php";

$app = new Console\Application('SAM-IT Development Tool', '0.1');
$app->run();